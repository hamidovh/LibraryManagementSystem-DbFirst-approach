<!-- Əsas Layout (~/Views/Shared/_Layout.cshtml): -->

<!DOCTYPE html>

<html lang="az">

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Library Management System</title>

    @Styles.Render("~/Content/css")

    <style>
        .carousel-item {
            height: 32rem;
        }

        /* Input və button hündürlüyünü bərabərləşdirilir: */
        .search-input, .search-btn {
            height: 38px;
            box-sizing: border-box;
        }

        .search-input {
            padding: 0 0.75rem; /* padding */
        }

        .user-greeting {
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .user-greeting:hover {
            color: #0d6efd; /* hover zamanı göy rəng */
            text-decoration: underline; /* alt xətt əlavə olunur */
        }
    </style>

    @Scripts.Render("~/bundles/modernizr")

</head>

<body>

    <header data-bs-theme="dark">

        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">

            <div class="container-fluid">

                <a class="navbar-brand" href="#">Library Management System</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapse">

                    <ul class="navbar-nav me-auto mb-2 mb-md-0">

                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Əsas səhifə</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Home/About">Haqqımızda</a>
                        </li>

                        @Html.Action("_PartialMenu", "Home")

                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Contact">Əlaqə</a>
                        </li>

                    </ul>

                    <div class="d-flex align-items-center">

                        <form id="searchForm" class="d-flex me-3" role="search">
                            <input id="searchInput" class="form-control me-2 search-input" type="search" placeholder="Axtarış" aria-label="Search">
                            <button class="btn btn-outline-success search-btn" type="submit">Axtar</button>
                        </form>

                        @if (Session["User"] == null)
                        {
                            <a href="@Url.Action("Login", "Account", new { area = "User" })" class="btn btn-primary me-2" style="height:38px;">Daxil Ol</a>
                            <a href="@Url.Action("Register", "Account", new { area = "User" })" class="btn btn-success" style="height:38px;">Qeydiyyatdan Keç</a>
                        }

                        else
                        {
                            <a href="@Url.Action("Index", "Home", new { area = "User" })"
                               class="nav-link text-white me-3 user-greeting"
                               style="height:38px; line-height:38px;">
                                Salam, @Session["UserName"]!
                            </a>

                            <a href="@Url.Action("Logout", "Account", new { area = "User" })" class="btn btn-danger" style="height:38px;">Çıx</a>
                        }

                    </div>

                </div>

            </div>

        </nav>

    </header>

    <main style="padding-top: 70px;">

        <!-- Axtarış nəticələrinin düşəcəyi yer: -->
        <div id="searchResults" class="mt-4"></div>

        @RenderBody()

        <!-- FOOTER: -->
        <footer class="footer mt-auto bg-light">
            <div class="container-fluid">
                <p class="float-end"><a href="#">Yuxarı Çıx</a></p>
                <p>© 2017–2025 Company, Inc. · <a href="#">Məxfilik Siyasəti</a> · <a href="#">İstifadə Şərtləri</a></p>
            </div>
        </footer>

    </main>

    <!-- Scroll to top button: -->
    <button type="button" id="scrollTopBtn" title="Yuxarı çıx"
            class="btn btn-primary"
            style="display:none; position:fixed; bottom:40px; right:40px; z-index:9999; border-radius:50%; width:50px; height:50px;">
        ↑
    </button>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $("#searchForm").submit(function (e) {
                e.preventDefault(); // form reload olmasın

                var query = $("#searchInput").val();
                console.log("Form submit olundu:", query); // debug üçün

                $.ajax({
                    url: '@Url.Action("Search", "Home")',
                    type: 'GET',
                    data: { query: query },
                    success: function (data) {
                        $("#searchResults").html(data); // nəticəni göstər
                    },
                    error: function () {
                        $("#searchResults").html("<p class='text-danger'>Xəta baş verdi.</p>");
                    }
                });
            });
        });

        // Düyməni tap:
        var scrollBtn = document.getElementById("scrollTopBtn");

        // Scroll edəndə düyməni göstər/gizlət:
        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            if (document.body.scrollTop > 200 || document.documentElement.scrollTop > 200) {
                scrollBtn.style.display = "block";
            } else {
                scrollBtn.style.display = "none";
            }
        }

        // Klikləyəndə səhifəni yuxarı sürüşdür:
        scrollBtn.onclick = function () {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        };
    </script>

</body>

</html>
