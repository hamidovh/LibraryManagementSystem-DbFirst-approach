@model IEnumerable<LibraryManagementSystem.DAL.Kateqoriya>

@{
    ViewBag.Title = "Kateqoriyalar";
}

<h2>Kateqoriyalar</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        @Html.ActionLink("Yeni Kateqoriya Əlavə Et", "CreateKateqoriya", null, new { @class = "btn btn-info" })
    </div>

    @using (Html.BeginForm("IndexKateqoriya", "KateqoriyaIdaresi", FormMethod.Get, new { @class = "form-inline" }))
    {
        <div class="input-group">
            <input type="text" name="searchText" value="@Request.QueryString["searchText"]"
                   class="form-control" placeholder="Axtar (Kateqoriya Adı)" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Axtar</button>
                <a href="@Url.Action("IndexKateqoriya")" class="btn btn-secondary">Hamısını Göstər</a>
            </div>
        </div>
    }
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KateqoriyaAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KateqoriyaTesviri)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.KateqoriyaAdi)</td>
            <td>@Html.DisplayFor(modelItem => item.KateqoriyaTesviri)</td>
            <td>
                @Html.ActionLink("Redaktə Et", "EditKateqoriya", new { id = item.KateqoriyaID }, new { @class = "btn btn-sm btn-primary" }) |
                @Html.ActionLink("Sil", "DeleteKateqoriya", new { id = item.KateqoriyaID }, new { @class = "btn btn-sm btn-danger" })
            </td>
        </tr>
    }
</table>
