@model LibraryManagementSystem.DAL.Kateqoriya

@{
    ViewBag.Title = "Kateqoriyanı Redaktə Et";
}

<style>
    textarea.auto-expand {
        min-height: 80px;
        max-height: 500px;
        overflow-y: auto;
        resize: none;
    }
</style>

<h2>Kateqoriyanı Redaktə Et</h2>

@using (Html.BeginForm("EditKateqoriya", "KateqoriyaIdaresi", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.KateqoriyaID)

        <div class="form-group">
            @Html.LabelFor(model => model.KateqoriyaAdi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KateqoriyaAdi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KateqoriyaAdi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KateqoriyaTesviri, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.KateqoriyaTesviri, new { @class = "form-control auto-expand", rows = 3 })
                @Html.ValidationMessageFor(model => model.KateqoriyaTesviri, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Saxla" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Siyahıya Qayıt", "IndexKateqoriya")
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div id="successModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Uğurlu Redaktə</h5>
                </div>
                <div class="modal-body">
                    <p>@TempData["SuccessMessage"]</p>
                </div>
                <div class="modal-footer">
                    <button type="button" id="modalOkButton" class="btn btn-success">OK</button>
                </div>
            </div>
        </div>
    </div>
}

@section scripts {
    <script>
        document.addEventListener('input', function (event) {
            if (event.target.classList.contains('auto-expand')) {
                event.target.style.height = 'auto';
                event.target.style.height = (event.target.scrollHeight) + 'px';
            }
        }); // Auto-expand textareas on input

        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.auto-expand').forEach(function (textarea) {
                textarea.style.height = 'auto';
                textarea.style.height = (textarea.scrollHeight) + 'px';
            });
        }); // Auto-expand textareas on page load

        $(document).ready(function () {
            if ($('#successModal').length) {
                $('#successModal').modal('show');

                $('#modalOkButton').on('click', function () {
                    window.location.href = '@Url.Action("IndexKateqoriya", "KateqoriyaIdaresi")';
                });
            }
        }); // Show success modal if it exists
    </script>
}
