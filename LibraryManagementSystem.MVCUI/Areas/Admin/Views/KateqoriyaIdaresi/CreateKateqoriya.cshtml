@model LibraryManagementSystem.DAL.Kateqoriya

@{
    ViewBag.Title = "Kateqoriya Əlavə Et";
}

<style>
    textarea.auto-expand {
        min-height: 80px;
        max-height: 500px;
        overflow-y: auto;
        resize: none;
    }
</style>

<h2>Kateqoriya Əlavə Et</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.KateqoriyaAdi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KateqoriyaAdi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KateqoriyaAdi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KateqoriyaTesviri, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.KateqoriyaTesviri, new { @class = "form-control  auto-expand", rows = 5 })
                @Html.ValidationMessageFor(model => model.KateqoriyaTesviri, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Əlavə Et" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Siyahıya Qayıt", "IndexKateqoriya")
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div id="successModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Uğurlu Əlavə</h5>
                </div>
                <div class="modal-body">
                    <p>@TempData["SuccessMessage"]</p>
                </div>
                <div class="modal-footer">
                    <button type="button" id="modalOkButton" class="btn btn-success">OK</button>
                </div>
            </div>
        </div>
    </div>

    @section scripts {
        <script>
            $(document).ready(function () {
                $('#successModal').modal('show');

                $('#modalOkButton').on('click', function () {
                    window.location.href = '@Url.Action("IndexKateqoriya", "KateqoriyaIdaresi")';
                });
            });
        </script>
    }
}
