<!-- Admin Area Layout (~/Areas/Admin/Views/Shared/_Layout.cshtml): -->

<!DOCTYPE html>

<html lang="az">

<head>

    <style>
        .carousel-item {
            height: 32rem;
        }

        /* Navbar linklərinin açıq görünməsi: */
        .navbar-dark .navbar-nav .nav-link {
            color: #fff; /* Bütün linklər ağ rəngdə olacaq */
            transition: color 0.2s; /* Rəng dəyişimi yumşaq olacaq */
        }

            /* Hover və fokus effekti: */
            .navbar-dark .navbar-nav .nav-link:hover,
            .navbar-dark .navbar-nav .nav-link:focus {
                color: #0d6efd; /* İstənilən rəngi verir, burada mavi nümunə */
                text-decoration: underline; /* İstəyə görə altına xətt çəkir */
            }

            /* Active link rəngi: */
            .navbar-dark .navbar-nav .nav-link.active {
                color: #fff; /* Active link də ağ olsun */
                font-weight: 500; /* Daha seçilən görünsün */
            }

        .navbar-dark .navbar-brand {
            color: #fff; /* Ağ rəngdə göstərilsin */
            font-weight: 600; /* İstəyə görə qalınlıq */
        }

            .navbar-dark .navbar-brand:hover {
                color: #0d6efd; /* Hover zamanı mavi olacaq */
                text-decoration: underline;
            }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Ekranın bütün hündürlüyünü əhatə edəcək */
        }

        main.main-content {
            flex: 1; /* Main content bütün boşluğu tutacaq */
            padding-top: 70px; /* Navbar hündürlüyü qədər */
        }

        footer {
            background-color: #f8f9fa;
            padding: 1rem 0;
        }

        /* Input və button hündürlüyünü bərabərləşdirilir: */
        .search-input, .search-btn {
            height: 38px;
            box-sizing: border-box;
        }

        .search-input {
            padding: 0 0.75rem; /* padding */
        }
    </style>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Library Management System Admin</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="apple-touch-icon" sizes="76x76" href="~/Themes/soft-ui-dashboard-main/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/Themes/soft-ui-dashboard-main/assets/img/favicon.png">

    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700,800" rel="stylesheet" />

    <!-- Nucleo Icons -->
    <link href="~/Themes/soft-ui-dashboard-main/assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="~/Themes/soft-ui-dashboard-main/assets/css/nucleo-svg.css" rel="stylesheet" />

    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <link href="~/Themes/soft-ui-dashboard-main/assets/css/nucleo-svg.css" rel="stylesheet" />

    <!-- CSS Files -->
    <link href="~/Themes/soft-ui-dashboard-main/assets/css/soft-ui-dashboard.min.css" rel="stylesheet" />

    <!-- Nepcha Analytics (nepcha.com) -->
    <!-- Nepcha is a easy-to-use web analytics. No cookies and fully compliant with GDPR, CCPA and PECR. -->
    <script defer data-site="YOUR_DOMAIN_HERE" src="https://api.nepcha.com/js/nepcha-analytics.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />

</head>

<body class="g-sidenav-show  bg-gray-100">

