                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapse">

                    <ul class="navbar-nav me-auto mb-2 mb-md-0">

                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/Admin/">Əsas səhifə</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/KitabIdaresi/IndexKitab">Kitablar</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/MuellifIdaresi/IndexMuellif">Müəlliflər</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/KateqoriyaIdaresi/IndexKateqoriya">Kateqoriyalar</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/IstifadechiIdaresi/IndexIstifadechi">İstifadəçilər</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/RolIdaresi/IndexRol">Rollar</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/IcareIdaresi/IndexIcare">İcarələr</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/CerimeIdaresi/IndexCerime">Cərimələr</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Slider/IndexSlider">Slider</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Elaqe/IndexElaqe">Əlaqə</a>
                        </li>

                        <li class="nav-item d-flex align-items-center">
                            <a href="@Url.Action("IndexLogout", "Login", new { area = "Admin" })" class="nav-link">
                                <i class="fa fa-user me-sm-1"></i>
                                <span class="d-sm-inline d-none fw-bold">Çıx</span>
                            </a>
                        </li>

                    </ul>

                    <form class="d-flex" role="search">
                        <input class="form-control me-2 search-input" type="search" placeholder="Axtarış" aria-label="Search">
                        <button class="btn btn-outline-success search-btn" type="submit">Axtar</button>
                    </form>

                </div>

            </div>

        </nav>

    </header>

    <main class="main-content position-relative border-radius-lg ">
        <div class="container-fluid py-4">
            @RenderBody()
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="footer mt-auto bg-light">
        <div class="container-fluid">
            <p class="float-end"><a href="#">Yuxarı Çıx</a></p>
            <p>© 2017–2025 Company, Inc. · <a href="#">Məxfilik Siyasəti</a> · <a href="#">İstifadə Şərtləri</a></p>
        </div>
    </footer>

    <!-- Scroll to top button: -->
    <button type="button" id="scrollTopBtn" title="Yuxarı çıx"
            class="btn btn-primary"
            style="display:none; position:fixed; bottom:40px; right:40px; z-index:9999; border-radius:50%; width:50px; height:50px;">
        ↑
    </button>

    <script>
        // Düyməni tap:
        var scrollBtn = document.getElementById("scrollTopBtn");

        // Scroll edəndə düyməni göstər/gizlət:
        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            if (document.body.scrollTop > 200 || document.documentElement.scrollTop > 200) {
                scrollBtn.style.display = "block";
            } else {
                scrollBtn.style.display = "none";
            }
        }

        // Klikləyəndə səhifəni yuxarı sürüşdür:
        scrollBtn.onclick = function () {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        };
    </script>

    <!--   Core JS Files   -->
    <script src="~/Themes/soft-ui-dashboard-main/assets/js/core/popper.min.js"></script>
    <script src="~/Themes/soft-ui-dashboard-main/assets/js/core/bootstrap.min.js"></script>
    <script src="~/Themes/soft-ui-dashboard-main/assets/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="~/Themes/soft-ui-dashboard-main/assets/js/plugins/smooth-scrollbar.min.js"></script>
    <script src="~/Themes/soft-ui-dashboard-main/assets/js/plugins/chartjs.min.js"></script>

    <script>
        var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
            var options = {
                damping: '0.5'
            }
            Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }
    </script>

    <!-- Github buttons: -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>

    <!-- Control Center for Soft Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/Themes/soft-ui-dashboard-main/assets/js/soft-ui-dashboard.min.js?v=1.1.0"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)

</body>

</html>
