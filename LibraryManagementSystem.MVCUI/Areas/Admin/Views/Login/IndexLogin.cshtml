
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>İdarəçi Girişi</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/sign-in.css" rel="stylesheet" />
</head>
<body class="d-flex align-items-center py-4 bg-body-tertiary"> 
    <main class="form-signin w-100 m-auto">
        <form method="post">
            <h1 class="h3 mb-3 fw-normal">İdarəçi Girişi</h1>

            <div class="form-floating">
                <input type="text" class="form-control" id="floatingInput" placeholder="" name="IstifadechiAdi" required> @*type="email" placeholder="name@example.com"*@
                <label for="floatingInput">İstifadəçi Adı</label> @*Email, Telefon Nömrəsi və ya İstifadəçi Adı*@
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="Shifre" required>
                <label for="floatingPassword">Şifrə</label>
            </div>

            <div class="form-check text-start my-3">
                <input class="form-check-input" type="checkbox" value="remember-me" id="checkDefault">
                <label class="form-check-label" for="checkDefault">
                    Məni xatırla
                </label>
            </div>
            <button class="btn btn-primary w-100 py-2" type="submit">Daxil Ol</button>
            <p class="mt-5 mb-3 text-body-secondary">© 2025</p>
        </form>
        @{
            if (TempData["mesaj"] != null)
            {
                <div class="alert alert-warning">
                    <h3>@TempData["mesaj"]</h3>
                </div>
            }
        }
    </main>
</body>
</html>
