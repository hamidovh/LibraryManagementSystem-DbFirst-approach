
@model LibraryManagementSystem.DAL.Cerime

@{
    ViewBag.Title = "Yeni Cərimə";
}

<style>
    option[disabled] {
        color: gray;
    }
</style>


<h2>Yeni Cərimə</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <!-- Icare seçimi: -->
        <div class="form-group">
            @Html.LabelFor(model => model.IcareID, "İcarə ID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IcareID, (List<SelectListItem>)ViewBag.IcareList, "-- İcarə seçin --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IcareID, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Avtomatik dolacaq sahələr: -->
        <div class="form-group">
            @Html.Label("İstifadəçi", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IstifadechiID", (SelectList)ViewBag.IstifadechiID, "-- İstifadəçi seçin --", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Kitab", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" id="KitabAdi" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("İcarə Tarixi", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="date" id="IcareTarixi" class="form-control" readonly max="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Son Tarix", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="date" id="SonTarix" class="form-control" readonly max="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>
        </div>

        <!-- Cərimə məlumatları: -->
        <div class="form-group">
            @Html.LabelFor(model => model.Sebeb, "Cərimələnmə Səbəbi", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Sebeb, (SelectList)ViewBag.StatusList, "-- Səbəbi qeyd edin --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Sebeb, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CerimeTarixi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CerimeTarixi, new { htmlAttributes = new { @class = "form-control", type = "date", max = DateTime.Now.ToString("yyyy-MM-dd") } })
                @Html.ValidationMessageFor(model => model.CerimeTarixi, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.Mebleg, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Mebleg, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mebleg, "", new { @class = "text-danger" })
            </div>
        </div>*@

        @*<div class="form-group">
            @Html.LabelFor(model => model.Odenilibmi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Odenilibmi)
                    @Html.ValidationMessageFor(model => model.Odenilibmi, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>*@

        @*<div class="form-group">
            @Html.LabelFor(model => model.OdenmeTarixi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OdenmeTarixi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OdenmeTarixi, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Əlavə Et" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Siyahıya Qayıt", "IndexCerime")
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div id="successModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Uğurlu Əlavə</h5>
                </div>
                <div class="modal-body">
                    <p>@TempData["SuccessMessage"]</p>
                </div>
                <div class="modal-footer">
                    <button type="button" id="modalOkButton" class="btn btn-success">OK</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            $("#IcareID").change(function () {
                var icareId = $(this).val();
                if (icareId) {
                    $.ajax({
                        url: '@Url.Action("GetIcareDetails", "CerimeIdaresi", new { area = "Admin" })',
                        type: 'GET',
                        data: { icareId: icareId },
                        success: function (data) {
                            if (data) {
                                // Dropdown seç:
                                $("#IstifadechiID").val(data.IstifadechiID);

                                // Digər inputları doldur:
                                $("#KitabAdi").val(data.KitabAdi);
                                $("#IcareTarixi").val(data.IcareTarixi);
                                $("#SonTarix").val(data.SonTarix)
                            }
                        },
                        error: function () {
                            alert("Xəta baş verdi!");
                        }
                    });
                }
            });
        });

        $(document).ready(function () {
            $("#successModal").modal("show");

            $("#modalOkButton").click(function () {
                window.location.href = '@Url.Action("IndexCerime", "CerimeIdaresi", new { area = "Admin" })';
            });
        });
    </script>
}
