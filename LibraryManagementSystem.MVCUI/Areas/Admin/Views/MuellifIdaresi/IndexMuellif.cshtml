@model IEnumerable<LibraryManagementSystem.DAL.Muellif>

@{
    ViewBag.Title = "Müəlliflər";
}

<h2>Müəlliflər</h2>

<p>
    @Html.ActionLink("Yeni Müəllif Əlavə Et", "CreateMuellif", null, new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MuellifAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MuellifSoyadi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MuellifinDoghumTarixi)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MuellifAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MuellifSoyadi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MuellifinDoghumTarixi)
            </td>
            <td>
                @Html.ActionLink("Redaktə Et", "EditMuellif", new { id = item.MuellifID }, new { @class = "btn btn-sm btn-primary" }) |

                @Html.ActionLink("Sil", "DeleteMuellif", new { id = item.MuellifID }, new { @class = "btn btn-sm btn-danger" })
            </td>
        </tr>
    }

</table>
